.account {
  display: block; }
  .account .account-header {
    height: 350rpx;
    padding: 20rpx 0;
    position: relative; }
  .account .account-header:after {
    background-color: #6ACE6E;
    content: '';
    width: 140%;
    height: 180rpx;
    position: absolute;
    left: -20%;
    top: 0;
    z-index: -1;
    border-radius: 0 0 50% 50%; }
  .account .header-back {
    padding: 20rpx;
    background: white;
    border-color: black;
    margin: 40rpx auto;
    width: 80%;
    display: block;
    justify-content: center;
    border-radius: 3%;
    box-shadow: 0 20rpx 10rpx rgba(0, 0, 0, 0.3); }
  .account .header-top {
    margin-left: 30rpx;
    padding: 10rpx;
    width: 100%;
    display: flex; }
  .account .account-avator {
    display: flex;
    justify-content: center; }
  .account .account-content {
    margin-top: 5rpx;
    width: 100%;
    display: block;
    justify-content: center;
    margin-left: 40rpx; }
    .account .account-content .account-nickname {
      top: 10rpx;
      font-size: small;
      color: black; }
    .account .account-content .account-school, .account .account-content .account-credit {
      margin: 3% auto;
      font-size: 25rpx;
      color: #98999c; }
  .account .account-grid {
    padding: 10rpx;
    width: 100%;
    background: white;
    display: flex; }
    .account .account-grid .account-item {
      display: block;
      width: 33.3%;
      text-align: center; }
      .account .account-grid .account-item .account-tittle {
        margin-top: 5rpx;
        font-size: 25rpx;
        color: #98999c; }
  .account .account-list {
    margin-top: 10%;
    padding: 5%; }

