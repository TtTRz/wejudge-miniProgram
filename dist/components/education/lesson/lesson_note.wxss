.note-view .note-item {
  margin-top: 10rpx;
  padding: 20rpx;
  display: block;
  border-bottom: 1rpx solid #e8e9ea; }
  .note-view .note-item .note-header .note-title {
    margin-top: 15rpx; }
  .note-view .note-item .note-header .note-updatetime {
    float: right;
    height: 20rpx;
    margin-right: 10rpx;
    margin-top: -50rpx;
    color: #98999c;
    font-size: 20rpx; }
  .note-view .note-item .note-content {
    margin-top: 10rpx;
    height: 80rpx;
    line-height: 40rpx;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
    overflow: hidden;
    font-size: 25rpx; }

.empty-content {
  margin-top: 40%;
  text-align: center;
  color: #98999c;
  font-size: 25rpx; }
  .empty-content .empty-text {
    margin-top: 40rpx; }

.note-button {
  margin-top: 5rpx;
  bottom: 5rpx;
  text-align: center; }

